<%
const title = confirmTitle || 'Confirmar envío';
const msg   = confirmMessage || '¿Estás seguro que deseas enviar el formulario?';
%>
<div
  id="confirm-modal"
  class="fixed inset-0 bg-black bg-opacity-70 hidden flex items-center justify-center z-50"
  role="dialog"
  aria-modal="true"
>
  <div class="panel max-w-md w-full p-6 relative -mt-20 text-white">
    <h3 class="text-xl font-semibold mb-4 text-yellow-400"><%= title %></h3>
    <p class="mb-6"><%= msg %></p>
    <div class="flex justify-end gap-4">
      <button
        id="cancel-confirm"
        type="button"
        class="secondary btn-sm"
      >
        Cerrar
      </button>
      <button
        id="confirm-submit"
        type="button"
        class="primary btn-sm"
        data-confirm
      >
        Enviar
      </button>
    </div>
  </div>
</div>
